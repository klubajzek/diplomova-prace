{% extends 'base.html.twig' %}

{% block title %}{{ 'login.name'|trans }}<{% endblock %}

{% block body %}
    <section class="page">
        <div class="container">
            <h1 class="page__title">{{ 'login.title'|trans }}</h1>

            <form method="post" class="form--login">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="row">
                    <label for="inputEmail">{{ 'login.email'|trans }}</label>
                    <input type="text" value="{{ last_username }}" name="nickname" id="inputEmail" class="form-control" autocomplete="text" required autofocus>
                </div>
                <div class="row">
                    <label for="inputPassword">{{ 'login.password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="row">
                    <button class="btn btn-lg btn-primary" type="submit">
                        {{ 'login.button'|trans }}
                    </button>
                </div>
            </form>
        </div>
    </section>

{% endblock %}
