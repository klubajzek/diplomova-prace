{% extends 'base.html.twig' %}

{% block title %}Zapomenuté heslo{% endblock %}

{% block body %}
    <section class="intro">
        <div class="container">
            <h1 class="intro__title">Zapomenuté heslo</h1>
            <div class="admin-game-detail">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <div class="form">
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                Zadejte e-mailovou adresu, na kterou Vám pošleme odkaz pro obnovení hesla.
                            </small>
                        </div>

                        <button class="btn btn-primary">Odeslat e-mail</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
