{% extends 'frontend/game/game_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('assets/js/map.js') }}?v={{ filemtime('assets/js/map.js') }}"></script>
{% endblock %}

{% block body %}
    <section>
        <div class="map">
        </div>
        <div class="container">
                {% for item in game.gameProfiles %}
                    {% if item.user.id is same as app.user.id %}
                        <a class="city-position-{{ item.position }} city-occupied" href="{{ path('app_game_village', {'id': item.id}) }}">
                        </a>
                    {% else %}
                        <div class="city-position-{{ item.position }} city-occupied">
                        </div>
                    {% endif %}
                {% endfor %}
            <a href="{{ path('app_game_start_mini_game') }}" class="stone"></a>
            <a href="#!" class="wheat"></a>
            <a href="#!" class="wood"></a>
        </div>
    </section>

{% endblock %}