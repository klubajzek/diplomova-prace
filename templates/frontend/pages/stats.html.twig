{% extends 'base.html.twig' %}

{% block title %}Žebříček{% endblock %}

{% block body %}
    <section class="intro">
        <div class="container">
            <h1 class="intro__title">Žebříček</h1>
            <div class="game-profile__parent">
                <p>Seřazení hráčů podle úspěšných odpovědí</p>

                <table>
                    <thead>
                        <tr>
                            <th>Umístění</th>
                            <th>Přezdívka</th>
                            <th>Skóre</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in stats %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ item.user.nickname }}</td>
                                <td>{{ item.totalScore ?? 0 }}</td>
                            </tr>
                        {% endfor %}
                </table>
            </div>
        </div>
    </section>

{% endblock %}