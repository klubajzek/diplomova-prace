{% extends 'base.html.twig' %}

{% block title %}{{ 'administration.drag.title'|trans }}{% endblock %}

{% block body %}
    <section class="intro">
        <div class="container">
            <h1 class="intro__title">{{ 'administration.drag.title'|trans }}</h1>
            <div class="admin-game-detail">
                <a href="{{ path('app_administration_drag_new') }}" class="add-new btn btn-primary">Přidat příklad</a>
                <table>
                    <thead>
                        <tr>
                            <th>První část</th>
                            <th>Mezičást</th>
                            <th>Druhá část</th>
                            <th>Odpověď</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>
                                    {{ item.firstPart }}
                                </td>
                                <td>
                                    {{ item.partBetween }}
                                </td>
                                <td>
                                    {{ item.secondPart }}
                                </td>
                                <td>
                                    {{ item.answer }}
                                </td>
                                <td class="action">
                                    <a href="{{ path('app_administration_drag_edit', {'id': item.id}) }}">
                                        <img src="{{ asset('assets/images/edit.png') }}" alt="Upravit">
                                    </a>

                                    <a href="{{ path('app_administration_drag_remove', {'id': item.id}) }}" class="remove-item">
                                        <img src="{{ asset('assets/images/delete.png') }}" alt="Odstranit">
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>

{% endblock %}